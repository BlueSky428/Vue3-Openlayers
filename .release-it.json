{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init": [
      "git pull",
      "npm run lint",
      "npm run coverage",
      "npm run build"
    ]
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
